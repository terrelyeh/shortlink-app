// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// User & Authentication
// ============================================

enum UserRole {
  ADMIN
  MANAGER
  MEMBER
  VIEWER
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  role          UserRole  @default(MEMBER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts            Account[]
  sessions            Session[]
  workspaceMembers    WorkspaceMember[]
  sentInvitations     WorkspaceInvitation[] @relation("InvitedBy")
  auditLogs           AuditLog[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ============================================
// Workspace & Team Management
// ============================================

enum WorkspaceRole {
  OWNER   // Full control, can delete workspace
  ADMIN   // Manage members, all resource operations
  MEMBER  // Create and manage own resources
  VIEWER  // Read-only access
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  CANCELLED
}

model Workspace {
  id          String   @id @default(cuid())
  name        String   // Display name (e.g., "TW Marketing Team")
  slug        String   @unique // URL-friendly identifier (e.g., "tw-marketing")
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  members     WorkspaceMember[]
  invitations WorkspaceInvitation[]
  shortLinks  ShortLink[]
  campaigns   Campaign[]
  linkGroups  LinkGroup[]
  templates   UTMTemplate[]
  tags        Tag[]
  campaignTags CampaignTag[]

  @@map("workspaces")
}

model WorkspaceMember {
  id          String        @id @default(cuid())
  workspaceId String        @map("workspace_id")
  userId      String        @map("user_id")
  role        WorkspaceRole @default(MEMBER)
  joinedAt    DateTime      @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([workspaceId, userId])
  @@index([workspaceId])
  @@index([userId])
  @@map("workspace_members")
}

model WorkspaceInvitation {
  id          String           @id @default(cuid())
  workspaceId String           @map("workspace_id")
  email       String           // Email to invite
  role        WorkspaceRole    @default(MEMBER)
  token       String           @unique // Unique token for invitation link
  status      InvitationStatus @default(PENDING)
  invitedById String           @map("invited_by_id")
  expiresAt   DateTime         // Invitation expiry
  createdAt   DateTime         @default(now())
  acceptedAt  DateTime?        @map("accepted_at")

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  invitedBy User      @relation("InvitedBy", fields: [invitedById], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@index([email])
  @@index([token])
  @@map("workspace_invitations")
}

// ============================================
// Short Link & Related
// ============================================

enum RedirectType {
  PERMANENT // 301
  TEMPORARY // 302
}

enum LinkStatus {
  ACTIVE
  PAUSED
  ARCHIVED
}

model ShortLink {
  id           String       @id @default(cuid())
  code         String       @unique // The short code (e.g., "abc123")
  originalUrl  String       @db.Text
  title        String?      // Optional title for the link
  description  String?      // Optional description
  redirectType RedirectType @default(TEMPORARY)
  status       LinkStatus   @default(ACTIVE)

  // UTM Parameters (stored separately for reporting)
  utmSource   String?
  utmMedium   String?
  utmCampaign String?
  utmContent  String?
  utmTerm     String?

  // Limits & Expiration
  expiresAt DateTime?
  maxClicks Int?

  // Metadata
  workspaceId String   @map("workspace_id")
  createdById String   @map("created_by_id") // User who created the link
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime? // Soft delete

  // Relations
  workspace   Workspace    @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  clicks      Click[]
  tags        TagOnLink[]
  shareTokens ShareToken[]
  group       LinkGroup?   @relation(fields: [groupId], references: [id])
  groupId     String?      @map("group_id")
  campaign    Campaign?    @relation(fields: [campaignId], references: [id])
  campaignId  String?      @map("campaign_id")

  @@index([code])
  @@index([workspaceId])
  @@index([createdAt])
  @@map("short_links")
}

model Click {
  id          String   @id @default(cuid())
  shortLinkId String   @map("short_link_id")
  timestamp   DateTime @default(now())
  ipHash      String?  @map("ip_hash") // SHA-256 hashed IP
  userAgent   String?  @db.Text
  referrer    String?
  country     String?
  city        String?
  device      String?  // mobile, tablet, desktop
  os          String?  // iOS, Android, Windows, macOS, Linux
  browser     String?  // Chrome, Safari, Firefox, etc.

  shortLink ShortLink @relation(fields: [shortLinkId], references: [id], onDelete: Cascade)

  @@index([shortLinkId])
  @@index([timestamp])
  @@map("clicks")
}

// ============================================
// Organization & Grouping
// ============================================

model LinkGroup {
  id          String   @id @default(cuid())
  name        String
  description String?
  color       String?  // Hex color for UI
  workspaceId String   @map("workspace_id")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace Workspace   @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  links     ShortLink[]

  @@index([workspaceId])
  @@map("link_groups")
}

model Tag {
  id          String      @id @default(cuid())
  name        String
  color       String?     // Hex color for UI
  workspaceId String      @map("workspace_id")
  links       TagOnLink[]

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([name, workspaceId])
  @@index([workspaceId])
  @@map("tags")
}

model TagOnLink {
  shortLinkId String    @map("short_link_id")
  tagId       String    @map("tag_id")
  assignedAt  DateTime  @default(now())

  shortLink ShortLink @relation(fields: [shortLinkId], references: [id], onDelete: Cascade)
  tag       Tag       @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([shortLinkId, tagId])
  @@map("tags_on_links")
}

// ============================================
// Campaign Management
// ============================================

enum CampaignStatus {
  DRAFT      // Still preparing
  ACTIVE     // Currently running
  COMPLETED  // Ended (keep for viewing)
  ARCHIVED   // Hidden by default
}

model Campaign {
  id          String         @id @default(cuid())
  name        String         // Used as utm_campaign value (e.g., "spring_sale_2026")
  displayName String?        @map("display_name") // Human-readable name
  description String?
  status      CampaignStatus @default(ACTIVE)
  startDate   DateTime?      @map("start_date")
  endDate     DateTime?      @map("end_date")

  // Default UTM values for links in this campaign
  defaultSource String?      @map("default_source")
  defaultMedium String?      @map("default_medium")

  // Metadata
  workspaceId String   @map("workspace_id")
  createdById String   @map("created_by_id") // User who created the campaign
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  workspace Workspace       @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  links     ShortLink[]
  tags      TagOnCampaign[]

  @@unique([name, workspaceId])
  @@index([workspaceId])
  @@index([status])
  @@map("campaigns")
}

model CampaignTag {
  id          String          @id @default(cuid())
  name        String
  color       String?         // Hex color for UI
  workspaceId String          @map("workspace_id")
  campaigns   TagOnCampaign[]

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@unique([name, workspaceId])
  @@index([workspaceId])
  @@map("campaign_tags")
}

model TagOnCampaign {
  campaignId String   @map("campaign_id")
  tagId      String   @map("tag_id")
  assignedAt DateTime @default(now())

  campaign Campaign    @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  tag      CampaignTag @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([campaignId, tagId])
  @@map("tags_on_campaigns")
}

// ============================================
// UTM Templates
// ============================================

model UTMTemplate {
  id          String   @id @default(cuid())
  name        String
  source      String?
  medium      String?
  campaign    String?
  content     String?
  term        String?
  workspaceId String   @map("workspace_id")
  createdById String   @map("created_by_id")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)

  @@index([workspaceId])
  @@map("utm_templates")
}

// ============================================
// Share & Public Reports
// ============================================

model ShareToken {
  id          String    @id @default(cuid())
  shortLinkId String    @map("short_link_id")
  token       String    @unique
  password    String?   // Optional bcrypt hashed password
  expiresAt   DateTime?
  maxViews    Int?
  viewCount   Int       @default(0)
  createdAt   DateTime  @default(now())

  shortLink ShortLink @relation(fields: [shortLinkId], references: [id], onDelete: Cascade)

  @@index([token])
  @@map("share_tokens")
}

// ============================================
// Audit Log
// ============================================

enum AuditAction {
  // Link actions
  CREATE_LINK
  UPDATE_LINK
  DELETE_LINK
  RESTORE_LINK
  // Template actions
  CREATE_TEMPLATE
  UPDATE_TEMPLATE
  DELETE_TEMPLATE
  // Share actions
  SHARE_LINK
  REVOKE_SHARE
  // Campaign actions
  CREATE_CAMPAIGN
  UPDATE_CAMPAIGN
  DELETE_CAMPAIGN
  // Workspace actions
  CREATE_WORKSPACE
  UPDATE_WORKSPACE
  DELETE_WORKSPACE
  INVITE_MEMBER
  REMOVE_MEMBER
  UPDATE_MEMBER_ROLE
  ACCEPT_INVITATION
}

model AuditLog {
  id        String      @id @default(cuid())
  userId    String      @map("user_id")
  action    AuditAction
  targetId  String?     @map("target_id") // ID of the affected resource
  metadata  Json?       // Additional context
  ipAddress String?     @map("ip_address")
  createdAt DateTime    @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
  @@map("audit_logs")
}
